<html>
    <head>
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <h1>hey this is home</h1>
        <section id="feed-posts">
            <h4>Post</h4>
            <% if(locals.user){%>}
            <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" row="3" col="30" placeholder="type here"></textarea><br>
                <input type="submit" value="post">

            </form>
            <% } %>
            <div id="posts-list-container">
                <ul>
                    <%for(post of posts){%>
                        <li>
                            <%=post.content%><br>
                            <%=post.user.name%>  
                        </li>
                   <% } %>
                    
                </ul>
            </div>

        </section>
    </body>
</html>